                            </li>
                            <li class="menu-item @isCalculatorActive">
                                <a href="../home/calculator">Calculator</a>
                            </li>
                            <li class="menu-item @isReviewsActive">
                                <a href="../home/reviews">Reviews</a>
                            </li>
                            <li class="menu-item @isContactUsActive">
